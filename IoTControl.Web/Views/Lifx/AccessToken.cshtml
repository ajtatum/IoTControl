@model IoTControl.Models.UserLifxAccessToken

@{
    ViewBag.Title = "LIFX Access Token";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LIFX Access Token</h2>

<div class="panel panel-info">
    <div class="panel-heading">Unlike the arcade, tokens are free!</div>
    <div class="panel-body">
        If you don't have a LIFX Personal Access Token or need a new one, simply go to <a href="https://cloud.lifx.com/settings" target="_blank">https://cloud.lifx.com/settings</a>!
    </div>
</div>

@using (Html.BeginForm("AccessToken", "Lifx", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.UserId)

    <div class="form-group">
        <div class="col-sm-2">
            @Html.LabelFor(m => m.AccessToken, new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.AccessToken, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.AccessToken)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button id="btnSaveAccessToken" type="submit" class="btn btn-primary">Save LIFX Access Token</button>
        </div>
    </div>
}